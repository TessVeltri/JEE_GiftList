<script>
	const checkBox = document.getElementById("isActive");
	const date = document.getElementById("limitDate");
	function checkClick() {
		if (date.disabled == true) {
			date.disabled = false;
			date.required = true;
			checkBox.required = false;
		} else {
			date.disabled = true;
			date.value = "";
			date.required = false;
			checkBox.required = true;
			
		}

	}
</script>
